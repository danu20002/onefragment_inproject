<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot_password">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please Enter your registered Email and reset your password in the sent link"
            android:textColor="#F30606"
            android:textStyle="italic"
           android:textSize="13sp"
            android:textAlignment="textStart"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/background_edit"
        android:hint="Email"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:id="@+id/email_forgot"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="forgot password"
            android:backgroundTint="#8692f7"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/forgot_btn"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="Move To login PAge"
        android:backgroundTint="#8692f7"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/login_forgot"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar_forgot"
        android:visibility="gone"/>


</LinearLayout>


</RelativeLayout>